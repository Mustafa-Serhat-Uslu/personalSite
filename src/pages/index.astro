---
import Layout from "../layouts/Layout.astro";
import { aboutContent, jobExperience, projectsData } from "../info/about";
import { Accordion } from "@/components/Header/components/Accordion/Accordion";

title: "Mustafa Serhat Uslu Resume personal site"
description: "Resume of Mustafa Serhat Uslu with Experience, Skills and Projects."
draft: false
---

<Layout title="M-U-S-T-A-F-A">
  <main
    class="bg-stone-300 max-w-3xl flex flex-col gap-4 mx-0 sm:mx-10 lg:mx-auto rounded-2xl p-3 sm:p-5"
  >
    {aboutContent.map((paragraph) => <p>{paragraph.join(" ")}</p>)}
    <Accordion items={jobExperience} title={"Experience"} client:visible />
    <Accordion items={projectsData} title={"Projects"} client:visible />
  </main>
</Layout>
